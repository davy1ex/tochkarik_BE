{# templates/login/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Sign In{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sign.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Sign In</h1>

        {% if error %}
            <div class="form-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('appLoginPage') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group">
                <label for="username">Email:</label>
                <div><input type="text" id="username" name="_username" value="{{ last_username }}"></div>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <div><input type="password" id="password" name="_password"></div>
            </div>

            <button type="submit" class="btn">Sign In</button>
        </form>

        <a href="/register">Sign Up</a>
    </div>
{% endblock %}
